	color: 0,1,0,1
	size_hint: 0.4, 0.2 
	
<MainScreen>:
	name: "main"

    FloatLayout:
        Button:
    	    text: "Sleep"
    		pos_hint: {"x": .1, 'top':.9}
    	
    	
		Button:
			text: "B1"
			pos_hint: {"right": .91, 'top':.9}
			
			
    		
    	Button:
    	    text: "Music"
    		pos_hint: {"right": .5, 'top':.69}
    	
    	Button:
    	    text: "Weather"
    		pos_hint: {"right": .91, 'top':.69}
    		
    	#Button:
    	#	on_release: app.root.current = "other"
    	#	text: "Next Screen"
    	#	font_size: 50
		
<AnotherScreen>:
	name: "other"
	
	FloatLayout:
		
		Button:
			color: 0,1,0,1
			font_size: 25
			size_hint: 0.3,0.2
			text: "Back Home"
			on_release: app.root.current = "main" 
			pos_hint: {"right":1, "top":1}